{
  "name": "promptyflow",
  "version": "1.0.0",
  "description": "PromptyFlow - AI Prompt Constructor | http://promptyflow.com/",
  "main": "main.js",
  "author": "Твоё Имя",
  "license": "ISC",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "clean": "rimraf dist build",
    "dev": "npm run clean && concurrently --kill-others \"webpack --watch\" \"wait-on dist/bundle.js && chcp 65001 && electron . --dev\"",
    "dev2": "node scripts/dev.js",
    "build": "webpack --mode production",
    "package": "npm run build && electron-builder build --win",
    "package-all": "npm run build && electron-builder build --win --mac --linux"
  },
  "dependencies": {
    "i18next": "^23.7.6",
    "react-i18next": "^14.0.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "css-loader": "^6.8.1",
    "electron": "^25.1.1",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.10",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.promptyflow.app",
    "productName": "PromptyFlow",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "main/**/*",
      "preload.js",
      "package.json",
      "assets/icon.ico",
      "assets/icon.png"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "project_templates",
        "to": "project_templates",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "projects",
        "to": "projects",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "context_data",
        "to": "context_data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "templates/**/*",
      "project_templates/**/*",
      "projects/**/*",
      "context_data/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "PromptyFlow-portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": null
  }
}
