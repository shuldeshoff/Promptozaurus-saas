// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  
  googleId String @unique @map("google_id")
  email    String @unique
  name     String
  avatarUrl String? @map("avatar_url")
  
  language String @default("en") // en | ru
  theme    String @default("dark") // dark | light
  
  projects  Project[]
  templates Template[]
  apiKeys   ApiKey[]
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Project {
  id String @id @default(uuid())
  
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name String
  data Json // JSONB - полная структура проекта
  
  shares ProjectShare[]
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("projects")
}

model ProjectShare {
  id String @id @default(uuid())
  
  projectId String @map("project_id")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  ownerId String @map("owner_id") // ID владельца проекта (для удобства)
  
  sharedWithEmail String @map("shared_with_email") // Email пользователя, с которым делимся
  permission      String @default("view") // view | edit
  status          String @default("pending") // pending | accepted | rejected
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([projectId, sharedWithEmail])
  @@index([projectId])
  @@index([sharedWithEmail])
  @@map("project_shares")
}

model Template {
  id String @id @default(uuid())
  
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name    String
  content String @db.Text
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("templates")
}

model ApiKey {
  id String @id @default(uuid())
  
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  provider     String // openai | anthropic | gemini | grok | openrouter
  encryptedKey String @map("encrypted_key") @db.Text
  status       String @default("not_configured") // not_configured | active | error
  
  lastTestedAt DateTime? @map("last_tested_at")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, provider])
  @@index([userId])
  @@map("api_keys")
}

model ModelsCache {
  id String @id @default(uuid())
  
  provider   String @unique
  modelsList Json   @map("models_list") // JSONB
  
  cachedAt  DateTime @default(now()) @map("cached_at")
  expiresAt DateTime @map("expires_at")

  @@map("models_cache")
}

